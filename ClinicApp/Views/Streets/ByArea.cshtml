@model IEnumerable<ClinicApp.Models.StreetModel>

@{
    ViewBag.Title = "Улицы";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p class="text-right" style="margin: 20px 0;">
    @Html.ActionLink("Добавить", "Create", "Streets")
</p>
<table class="table">
    <tr>
        <th>
            Id
        </th>
        <th>
            Название
        </th>
        <th>
            Id участка
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Id
            </td>
            <td>
                @item.Name
            </td>
            <td>
                @item.Area
            </td>
            <td class="text-right">
                @Html.ActionLink("Edit", "Edit", "Streets", new { id = item.Id }, null) |
                @Html.ActionLink("Delete", "Delete", "Streets", new { id = item.Id }, null)
            </td>
        </tr>
    }

</table>

<div>
    @Html.ActionLink("Назад", "Index", "Areas")
</div>

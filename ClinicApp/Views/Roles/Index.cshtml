@model IEnumerable<ClinicApp.Models.RoleModel>

@{
    ViewBag.Title = "Роли пользователей";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p class="text-right" style="margin: 20px 0;">
    @Html.ActionLink("Добавить", "Create", "Roles")
</p>
<table class="table">
    <tr>
        <th>
            Id
        </th>
        <th>
            Название
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.Id
        </td>
        <td>
            @item.Name
        </td>
        <td class="text-right">
            @Html.ActionLink("Edit", "Edit", "Roles", new { id=item.Id }, null) |
            @Html.ActionLink("Delete", "Delete", "Roles", new { id=item.Id }, null)
        </td>
    </tr>
}

</table>

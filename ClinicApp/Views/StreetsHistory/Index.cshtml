@model IEnumerable<ClinicApp.Models.StreetModel>

@{
    ViewBag.Title = "Улицы";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <ul class="nav nav-tabs" style="margin: 50px;">
        <li>@Html.ActionLink("Участки", "Index", "AreasHistory")</li>
        <li>@Html.ActionLink("Истории болезней", "Index", "RecordsHistory")</li>
        <li>@Html.ActionLink("Диагнозы", "Index", "DiagnosisHistory")</li>
        <li>@Html.ActionLink("Врачи", "Index", "DoctorHistory")</li>
        <li>@Html.ActionLink("Пациенты", "Index", "PatientsHistory")</li>
        <li>@Html.ActionLink("Приёмы", "Index", "ReceptionsHistory")</li>
        <li>@Html.ActionLink("Специализации", "Index", "SpecialitiesHistory")</li>
        <li class="active">@Html.ActionLink("Улицы", "Index", "StreetsHistory")</li>
    </ul>

<table class="table">
    <tr>
        <th>
            Id
        </th>
        <th>
            Название
        </th>
        <th>
            Id участка
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.Id
        </td>
        <td>
            @item.Name
        </td>
        <td>
            @item.Area
        </td>
    </tr>
}

</table>

<div style="margin: 50px">
    <div class="text-center">
        @Html.ActionLink("<< Отмена", "Undone", "StreetsHistory", new { time = ViewBag.Time, step = ViewBag.Step }, new { @style = "margin: 0 5px" })
        @Html.ActionLink("Повтор >>", "Redone", "StreetsHistory", new { time = ViewBag.Time, step = ViewBag.Step }, new { @style = "margin: 0 5px" })
    </div>
</div>
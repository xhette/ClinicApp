@model IEnumerable<ClinicApp.Models.PatientModel>

@{
    ViewBag.Title = "Patients";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <ul class="nav nav-tabs" style="margin-top: 50px;">
        <li>@Html.ActionLink("Главная", "Index", "Doctor")</li>
        <li>@Html.ActionLink("Моё расписание", "Schedule", "Doctor")</li>
        <li class="active">@Html.ActionLink("Мои пациенты", "Patients", "Doctor")</li>
    </ul>

<table class="table" style="margin-top: 50px">
    <thead>
        <tr>
            <th>
                ФИО
            </th>
            <th>
                Адрес
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Surname @item.Name @item.Patronymic
                </td>
                <td>
                    @item.Address
                </td>
                <td>
                    @Html.ActionLink("Мед. карта", "Records", "Doctor", new { patientId = item.Id }, new { @class = "btn btn-primary" })
                </td>
            </tr>
        }
    </tbody>
</table>
